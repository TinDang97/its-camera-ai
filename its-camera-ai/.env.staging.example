# Staging Environment Configuration
# Copy this file to .env.staging and update with your actual values

# Application Configuration
ENVIRONMENT=staging
BUILD_TARGET=production
IMAGE_TAG=staging-latest
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
APP_PORT=8000
WORKERS=2
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
KEEP_ALIVE=2

# Database Configuration
DATABASE_URL=postgresql+asyncpg://staging_user:staging_password@localhost:5432/its_camera_ai_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=staging_redis_password
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=25

# Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=staging_minio_user
MINIO_ROOT_PASSWORD=staging_minio_password
MINIO_SECURE=true

# Security Configuration
SECRET_KEY=your-secret-key-here-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# External Services
INFLUXDB_URL=http://localhost:8086
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Monitoring and Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS=true
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=localhost

# Security Headers
SECURE_HEADERS=true
CORS_ORIGINS=["https://staging.its-camera-ai.com"]
ALLOWED_HOSTS=["staging.its-camera-ai.com", "staging-api.its-camera-ai.com"]

# Performance Settings
BATCH_SIZE=8
MAX_BATCH_DELAY=50
MODEL_CACHE_SIZE=512

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30