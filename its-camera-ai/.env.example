# Environment Variables for ITS Camera AI
# Copy this file to .env and update the values for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=its-camera-ai
APP_VERSION=0.1.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
METRICS_PORT=8001
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql+asyncpg://its_user:its_password@localhost:5432/its_camera_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=admin-token-12345
INFLUXDB_ORG=its-camera-ai
INFLUXDB_BUCKET=metrics

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=its-camera-ai
KAFKA_AUTO_OFFSET_RESET=latest

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_NAME=its-camera-ai

# ML Model Configuration
MODEL_REGISTRY_PATH=./models
DEFAULT_MODEL_NAME=yolo11n.pt
MODEL_CONFIDENCE_THRESHOLD=0.5
MODEL_IOU_THRESHOLD=0.45
BATCH_SIZE=8
MAX_BATCH_DELAY=100

# Computer Vision Settings
MAX_IMAGE_SIZE=1920x1080
SUPPORTED_FORMATS=["jpg","jpeg","png","bmp","webp"]
FRAME_RATE=30
VIDEO_BUFFER_SIZE=100

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=auto
GPU_MEMORY_FRACTION=0.8
MIXED_PRECISION=true

# Monitoring and Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
SENTRY_DSN=
OPENTELEMETRY_ENABLED=false
METRICS_PUSH_GATEWAY=

# Deployment Configuration
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_TAG=latest
BUILD_TARGET=development

# Development Settings
DEV_RELOAD=true
DEV_HOT_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_PROFILER=false

# Testing Configuration
TEST_DATABASE_URL=postgresql+asyncpg://its_user:its_password@localhost:5432/its_camera_ai_test
PYTEST_WORKERS=auto
COVERAGE_THRESHOLD=90

# File Paths
DATA_PATH=./data
LOGS_PATH=./logs
MODELS_PATH=./models
TEMP_PATH=./temp
BACKUP_PATH=./backups

# External APIs (if any)
WEATHER_API_KEY=
TRAFFIC_API_KEY=
GEOLOCATION_API_KEY=

# Email Configuration (for notifications)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@its-camera-ai.com

# Caching Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Feature Flags
FEATURE_ML_INFERENCE=true
FEATURE_REAL_TIME_PROCESSING=true
FEATURE_BATCH_PROCESSING=true
FEATURE_FEDERATED_LEARNING=false
FEATURE_EDGE_DEPLOYMENT=false